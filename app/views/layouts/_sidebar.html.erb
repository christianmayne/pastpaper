<% featured_items = 4 %>
<% featured_documents = Document.find(:all, :conditions=> 'is_featured = 1').sort_by{ rand }.slice(0..(featured_items-1)) %>

<span class="sidebar_header">Featured Items</span>
<% featured_documents.reverse.each do |document| %>
	<div class="sidebar_item">
		<div class="sidebar_heading"><%= document.name %><br /></div>
		<div class="sidebar_photo"><%= link_to image_tag(document.default_image.photo.url(:small)), document_path(document) unless document.default_image.nil? %></div>
	</div>
<% end %>
