<div id="page-header">
		<div class="status_message">
			<% if flash[:alert]%>
				<div class="alert alert-error span12 centering"><%= flash[:alert]%></div>
	  	<% end %>
	  	<% if flash[:error]%>
				<div class="alert alert-error span12 centering"><%= flash[:error]%></div>
	  	<% end %>
	  	<% if flash[:notice]%>
				<div class="alert alert-success span12 centering"><%= flash[:notice]%></div>
	  	<% end %><!-- End Status Message -->	
		</div>
  <!-- Logo -->
  <div class="logo pull-left brand">
	  <a href="/" class="pull-left">
		  <%= image_tag("logo.jpg")%>
	  </a>
	   <div class="pull-right " style="padding: 20px;">
	   
	     
	   <br/>
	<% if !current_user %>    
		<strong><%= link_to "Register now !" ,register_path, :class=>"strong", :id=>"registerUser", :style => "color:red"%>&nbsp;&nbsp;&nbsp; for full access to our database.</strong>
	<% end %>
	   </div>
  </div>
  
  <div class="pull-right">
  	
  	<ul class="breadcrumb currently_listed">
  		
  		<li><h5>Currently listed - </h5></li>
  		<li><b><%= Person.count%></b> Individuals.<span class="divider">|</span></li>
  		<li><b><%=Location.count%></b> Locations.<span class="divider">|</span></li>
  		<li><b><%= Document.count %></b> Items.</li>
	</ul>
	     </div>
  <!-- End Logo-->
  

  <div class="modal fade" id="loginModal" >
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">Ã—</button>
      <h3>Login </h3>
    </div>
    <div class="modal-body">
      <div class="login-box pull-right">
        <% if !current_user %>
		      <div class="login-form-wrapper">
		      
		        <%= form_tag :login ,:id=>"userLogin" , :class => "form-inline" do |f| %>
		          <%= text_field_tag :username,nil,{:placeholder=>"Username",:size=>"20"} %> 
					    <%= password_field_tag :password,nil, {:placeholder=>"Password",:size=>"18"} %> 
					    <input class="btn btn-primary" type="submit" id="submitLogin" name="submitLogin" value="Login" />
					    <br/>
				      <div class="pull-left">
				        <%= link_to "Forgot Password?" ,forgot_password_path ,:id=>"fpassword"%>
				      </div>
				      <div class="pull-right">
          		  Remember Me <%= check_box_tag :remember_me, 1 %>
          	  </div>
          	<%end%>  
          	
			    </div>
		    <%end%>
		    <div class="social_links pull-right row-fluid">
          <a href="http://www.pastonpaper.com/blog" target="_blank"><%= image_tag("/assets/icons/blog.gif",:height=>"16")%></a>
          <a href="http://www.facebook.com/pastonpaper" target="_blank"><%= image_tag("/assets/icons/facebook.png",:height=>"16")%></a>
          <a href="http://twitter.com/pastonpaper" target="_blank"><%= image_tag("/assets/icons/twitter.png",:height=>"16")%></a>
		    </div>	
      </div>
    </div>
    <div class="modal-footer">
      <a href="#" class="btn" data-dismiss="modal">Close</a>
    </div>
  </div>
</div> <!--End Page Header-->



