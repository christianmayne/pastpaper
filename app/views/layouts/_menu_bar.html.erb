<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">

      <div class="brand">
        <a href="/">
          The Past On Paper
        </a>
        <% if current_user.present? && current_user.is_admin? %>
          : <%= site.profile_name %>
        <% end %>
      </div>

      <ul class="nav ">
        <li class="divider-vertical"></li>
        <li><%= link_to "Home", '/' %></li>
        <li class="divider-vertical"></li>
        <li><%= link_to "Blog", "http://blog.pastonpaper.com/" %>
        <li class="divider-vertical"></li>
      </ul>

      <% if current_user %>

        <ul class="nav pull-right">

          <li class="divider-vertical"></li>

          <li class="dropdown">
            <a data-toggle="dropdown" class="dropdown-toggle" href="#">Your actions <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Your Profile", user_home_path%> </li>
              <% if !current_user.is_admin? %>
                <li><%= link_to "Your Items",documents_path %></li>
             		<li><%  @gedcom_link_text =  @gedcom_link_text ?  @gedcom_link_text:"Your Gedcom Files"%><%= link_to @gedcom_link_text, gedcom_documents_path %></li>
                <li class="divider"></li>
                <% if site.listing_enabled %>
                  <li><%= link_to "Add New Item", new_document_path%> </li>	
                <%end%>
            		<li><%= link_to 'Add New Gedcom', new_gedcom_document_path %></li>
              <%end%>
        	  </ul>
          </li>

          <% if current_user && current_user.is_admin? %>
            <li class="divider-vertical"></li>
            <li class="dropdown"><a data-toggle="dropdown" class="dropdown-toggle" href="#">Administration <b class="caret"></b></a>
              <ul class="dropdown-menu">
	              <li><%= link_to "All Users", admin_users_path%> </li>
	              <li><%= link_to "All Items", admin_documents_path%> </li>
                <li class="divider"></li>
	              <li><%= link_to "Purchases", admin_orders_path%> </li>
	              <li><%= link_to "Reports", admin_report_path%> </li>
                <li class="divider"></li>
	              <li><%= link_to "Document Types",admin_document_types_path %></li>
	              <li><%= link_to "Document Status",admin_statuses_path %></li>
	              <li><%= link_to "Attributes Types", admin_attribute_types_path%> </li>
                <li><%= link_to "Event Types", admin_event_types_path%></li>
              </ul>          	
            </li>
          <%end%>

          <li class="divider-vertical"></li>
          <li class="dropdown">
            <a data-toggle="dropdown" class="dropdown-toggle" href="#"><i class="icon-user icon-white"></i><%= current_user.username.to_s  %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Change Password", changepassword_path%> </li>
              <% if !current_user.is_admin? %>
                <li><%= link_to "Deactivate My account", deactivateaccount_path,:class=>"" ,:method => :delete ,:confirm => "Are you sure? This action cannot be undone."%></li>
              <%end%> 
              <li><%= link_to("Sign Out", logout_path) %></li>
              <li class="divider"></li>
              <li><%= link_to("Help", "#") %></li>
            </ul>
          </li>
          <li class="divider-vertical"></li>
        </ul>

      <%else%>

	      <ul class="nav pull-right">
          <li><a class="pull-right" data-toggle="modal" href="#loginModal" data-backdrop="static">Login</a></li>
          <li class="divider-vertical"></li>
          <li><%= link_to "Register" ,register_path , :class=>"pull-right"%></li>
        </ul>

	    <%end%>

    </div>
  </div>
