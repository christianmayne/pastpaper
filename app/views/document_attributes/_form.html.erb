<div class="fields">
	<div class="controls controls-row">
		<%= f.collection_select :attribute_type_id, AttributeType.all, :id, :name, :prompt => true, :class => 'span3' %>
		<%= f.text_field  :value, :placeholder=> 'Name', :class=>'span6' %>
	</div>
	<br />
	<div class="controls ">
		<%= f.select :date_modifier, [['Before','BEF'],['After','AFT'],['About','ABT'],['Estimated','EST']], {:prompt=>"Exactly", :class => 'span3'} %>
	  <%= f.number_field :attribute_day,  {:placeholder=>"dd",:class => 'span1'} %>
	  <%= f.number_field :attribute_month,   {:placeholder=>"mm", :class => 'span1'} %>
	  <%= f.number_field :attribute_year,   {:placeholder=>"yyyy", :class => 'span2'} %>
	</div>
	<br />
	If an Address is provided, please enter it here:
	<div class="controls controls-row">
		<%= f.text_field  :street1, :placeholder=>'Address 1', :class=>"span6" %>
	</div>
	<div class="controls controls-row">
		<%= f.text_field  :street2, :placeholder=>'Address 2', :class=>"span6" %>
	</div>
	<div class="controls controls-row">
		<%= f.text_field  :town, :placeholder=>'Town / City', :class=>'span6' %>
	</div>
	<div class="controls controls-row">
		<%= f.text_field  :county, :placeholder=>'County', :class=>'span6' %>
	</div>
	<div class="controls controls-row">
		<%= f.text_field  :state, :placeholder=>'State', :class=>'span6'%>
	</div>
	<div class="controls controls-row">
		<%= f.text_field  :country, :placeholder=>'Country', :class=>'span6' %>
	</div>

	<hr />
</div>