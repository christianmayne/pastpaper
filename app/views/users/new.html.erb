<!-- Container -->
<div class="container siteScale clearfix">
<div class="block whiteBG leftBox varMarginDouble border floatLeft">
	<div class="varPaddingDouble horPaddingDouble">
    	<h1>New User Register</h1>
      
 <div class="registraton">     
<%= form_for(@user)  do |f| %>
  
  <%= render :partial=>"shared/validationerror" ,:locals=>{:obj=>@user}%>
  
  
    
    <%= f.label :first_name  %>
    <%= f.text_field :first_name,{:required=>true}%>*
  
  
  <br />
  
    <%= f.label :last_name %>
    <%= f.text_field :last_name ,{:required=>true} %>*
  
  
  <br />
    <%= f.label :username %> 
    <%= f.text_field :username  ,{:required=>true}%>*
  
  <br />
    <%= f.label :password %> 
    <%= f.password_field :password ,{:required=>true}%>*
 
  <br />
      <%= f.label :password_confirmation, "Confirm password" %>
      <%= f.password_field  :password_confirmation ,{:required=>true} %>*
  <br />
    <%= f.label :email %>
    <%= f.email_field :email ,{:required=>true}%>*
    <br />
      <%= f.label :address1 %>
      <%= f.text_field  :address1 %>
  <br />
      <%= f.label :address2 %>
      <%= f.text_field  :address2 %>
    <br />
      <%= f.label :city,"City/Town" %>
      <%= f.text_field  :city %>
    <br />
      <%= f.label :county,"County/State" %>
      <%= f.text_field  :county %>
       <br />
      <%= f.label :post_code %>
      <%= f.text_field  :post_code %>
   <br />
      <%= f.label :country %>
      <%= f.text_field  :country %>
    <br />
      <%= f.label :tel_number %>
      <%= f.number_field  :tel_number %>
 <br />
      <%= f.label :mobile_number %>
      <%= f.number_field  :mobile_number %>
 <br />
      <%= f.label :date_of_birth %>
      <%= f.date_select  :date_of_birth, :start_year => Date.today.year-110, :end_year => Date.today.year-1,:include_blank => true%>
    <br />
    
  <div class="varPaddingDouble horPaddingDouble alignCenter">
    <%= f.submit(:value=>"",:class=>"submit") %>
  </div>
<% end %>
</div>
	</div>
</div>

<div class="rightBox varPaddingDouble horPaddingDouble block border floatRight varMarginDouble">

</div>

</div>