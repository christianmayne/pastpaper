<% @pagetitle = "Edit " + page_title %>
<% sub_title = "Locations" %>

<div class="well">
	<div class="row-fluid">
			<h4><%= @pagetitle %></h4>
			<h6><%= sub_title %></h6>
	</div>
</div>

<div class="row-fluid">
	<%= render :partial => "form_menu"%>
</div>

<legend>Locations</legend>

<div class="row-fluid">
	<div class="accordion">

		<h3><a href="#">Add Location For this <%= @document.document_type.name%></a></h3>
		<div><%= render :partial => "document_locations/form"%></div>

		<% @locations.each do |location| %>
			<% unless location.new_record? %>
				<h3><a href="#"><%= location.full_location %></a></h3>
				<div>
					Form here<br />		
					<%= link_to image_tag("deleteicon.png"),document_document_location_path(location.document.id,location),:method => :delete, :confirm => "Are you sure to delete?"  %>
				</div>	
			<% end %>			
		<%end%>

	</div> <!-- End Accordion -->
	
	<br />
	<%= link_to "Next" ,document_itempeople_path(@document),:class=>"btn pull-right"%>

</div>

<hr />