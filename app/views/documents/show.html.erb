<% if @document.name.blank? %>
  <% @pagetitle = @document.title %>
<% else %>
  <% @pagetitle = @document.name %>
<%end%>

<% @share_url = document_url(@document)%>
<% if !@document.blank? && !@document.document_photos.blank? %>
  <% @fb_img = @document.default_image.photo.url(:thumb)%>
<% end%>
<% @share_data=""%>
