<legend>Item Details</legend>


<div class="controls controls-row">
  <%= f.text_field :stock_number , {:placeholder => "Stock Number" , :class => "span2" }%>
  <%= f.collection_select :status_id, Status.alphabetically, :id, :name, :prompt => "Select Item Status", :class =>"span2"  %>
</div>
<br /> 
<div class="controls controls-row">
  <%= f.collection_select :document_type_id, DocumentType.alphabetically, :id, :name, :prompt =>"Select Item Type", :class =>"span4" %>
</div>
<br />
<div class="controls controls-row">
  <%= f.text_field :name , {:placeholder => "Item Name (the friendly name of the item, eg Family Bible of John Smith)" , :class => "span9" }%>
</div>
<br />
<div class="controls controls-row">
  <%= f.text_field :title , {:placeholder => "Item Title (the published title if applicable)" , :class => "span9" }%>
</div>
<br />
<div class="controls controls-row">
  <%= f.number_field :length,  {:placeholder=>"length (mm)",:class => 'span2'} %>
  <%= f.number_field :width,   {:placeholder=>"width (mm)", :class => 'span2'} %>
  <%= f.number_field :depth,   {:placeholder=>"depth (mm)", :class => 'span2'} %>
  <%= f.number_field :weight,  {:placeholder=>"weight (g)", :class => 'span2'} %>
</div>
<br />
<div class="controls controls-row">
  <%= f.text_field :condition,  {:placeholder=>"Describe Item Condition",:class => 'span9'} %>
</div>
<br />
<div class="controls controls-row">
  <%= f.text_field :binding,  {:placeholder=>"Describe Item Binding if applicable",:class => 'span9'} %>
</div>
<br />
<div class="controls controls-row">
  <%= f.text_area :comment, {:placeholder=>"Item Details",:class => 'textarea span9'} %>
</div>
<br />
<div class="controls controls-row">
  <%= f.text_field :tag_list,  {:placeholder=>"Enter some tags, seperated by commas (eg Victorian, Humour, Seaside)",:class => 'textarea span9'} %>
</div>
<br />
<div class="controls controls-row">
  <div class="span7"></div>
  <%= f.number_field :sale_price,  {:placeholder=>"Price",:class => 'span2'} %>
</div>