<% @pagetitle = "Add New Item" %>
<div class="introduction">
	<span class="headline4 lead">Add New Item</span>
</div>
<div class="container siteScale clearfix">
	<div class="block whiteBG clearfix varMarginDouble border">
		<div class="varPaddingDouble horPaddingDouble clearfix">
			<div class="span3 pull-left">
				<%= render :partial => "document_menu"%>
			</div>
			<div class="span6 offset1 pull-right">
				<div class="userform">
					<%= form_for @document, :html=>{ :multipart => true}  do |f| %>
					  <fieldset>
						  <%= render :partial => "shared/validationerror" ,:locals=>{:obj=>@document}%>
						  <%= render :partial => 'form', :locals => {:f => f}  %>
						  <div  >
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
				  	</fieldset>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>  
