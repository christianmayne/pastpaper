<div class="row-fluid">
	<%= render :partial => "form_menu"%>
</div>

<div class="row-fluid form-horizontal">
	<%= form_for @document, :html=>{ :multipart => true}  do |f| %>
		<%= render :partial => "shared/validationerror" ,:locals=>{:obj=>@document}%>
		<%= render :partial => 'form_item_details', :locals => {:f => f}  %>
		
		<br />
		<div class="controls controls-row">
		  <div class="span7"></div>
		  <%= f.submit "Save" ,:class=>"span2 btn" %>
		</div>
	<% end %>
</div>