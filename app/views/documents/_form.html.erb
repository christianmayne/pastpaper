<div class="userform">
	<h3>Item Details</h3>
		<div class="field">
			<%= f.label :stock_number%>
			<%= f.text_field :stock_number ,{:placeholder => "Input Item code for your item",:class=>"text"} %>
		</div>
		<div class="field">
			<%= f.label "Item_name"%>
			<%= f.text_field :name ,{:placeholder => "Name your item",:class=>"text"} %>
		</div>
		<div class="field">
			<%= f.label :document_type_id%>
			<%= f.collection_select :document_type_id, DocumentType.alphabetically, :id, :name, :prompt => true, :class => 'text' %>
		</div>
		<div class="field">
			<label>Status </label>
			<%= f.collection_select :status_id, Status.alphabetically, :id, :name, :prompt => true, :class => 'input-form-input' %>
		</div>
		<div class="field">
			<label>Title </label>
			<%= f.text_field :title, {:placeholder=>"Title of your item", :class => 'text'} %>
		</div>
		<div class="field">
			<label>Length</label>
			<%= f.number_field :length,  {:size => 8,:placeholder=>"0",:class => 'number'} %>
			Width
			<%= f.number_field :width,  {:size => 8,:placeholder=>"0",:class => 'number'} %>
			Depth
			<%= f.number_field :depth,  {:size => 8,:placeholder=>"0",:class => 'number'} %>
			Weight
			<%= f.number_field :weight, {:size => 8, :placeholder=>"0",:class => 'number'} %>
		</div>
	<div class="field">
		<label>Condition  </label>
		<%= f.text_field :condition,{:placeholder=>"Condition of your item", :class => 'text'}  %>
	</div>
	<div class="field">
		<label>Binding </label>
		<%= f.text_field :binding, {:placeholder=>"Binding/cover of your item", :class => 'text'}  %>
	</div>
	<div class="field">
		<label>Comments </label>
		<%= f.text_area :comment,   {:placeholder=>"Description of your item with in 255 chars.",:class => 'text',:size=>"40x5"}  %>
	</div>

	<div class="field" id="sell_price" style="display: none;">
		<label>Sale Price </label>
		<%= f.number_field :sale_price, {:size => 20,:placeholder=>"Selling Price",:class=>"sell_price"} %>
	</div>

	<%if current_user.is_admin? %>
		<div class="field">
			<label>Featured Item</label>
			<%= f.check_box :is_featured %>
		</div>		
	<%end%>		
</div>

