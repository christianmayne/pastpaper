<div class="fields">
    <table class="table table-striped table-bordered table-condensed clearfix">
    	<tr class="even">
    	<td>Event type</td>
    	<td></td>
    	<td>Year</td>
    	<td>Month</td>
    	<td>Day</td>
    	<td>Street1</td>
    	<td>Street2</td>
    	<td>Town</td>
    	<td>County</td>
    	<td>Country</td>
    	<td>&nbsp;</td>
    	</tr>
    	<tr class="">
    		<td><%= f.collection_select :event_type_id, EventType.all, :id, :name %></td>
    	
    	<td><%= f.select :date_modifier, PersonEvent::DATE_MODIFIERS,:include_blank=>true,:title=>"ABT:About,AFT:after"%></td>
    	<td><%= f.number_field :event_year, :size => 5, :placeholder=>"yyyy" %></td>
    	<td><%= f.number_field :event_month, :size => 5, :placeholder=>"mm" %></td>
    	<td><%= f.number_field :event_day, :size => 5, :placeholder=>"dd" %></td>
    	<td><%= f.text_field :street1, :size => 10, :class => 'input-form-input' %></td>
    	<td><%= f.text_field :street2, :size => 10, :class => 'input-form-input' %></td>
    	<td><%= f.text_field :town, :size => 10, :class => 'input-form-input' %></td>
    	<td><%= f.text_field :county, :size => 10, :class => 'input-form-input' %></td>
    	<td><%= f.text_field :country, :size => 10, :class => 'input-form-input' %></td>
    	<td><%= link_to_remove_fields image_tag("deleteicon.png"), f %></td>
    		
    	</tr>
    </table> 
</div>


