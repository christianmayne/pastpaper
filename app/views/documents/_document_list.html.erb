<div class="row-fluid">
	<div class="span8">
			<%= form_for :document_filter, :html => {:class=>"form-inline",:method=>:get} do |f| %>
				Filter by : 
				<% if !params[:document_filter].blank? &&  !params[:document_filter][:document_type_id].blank?%>
					<%= f.collection_select :document_type_id , DocumentType.alphabetically , :id,:name,{:prompt=>"All",:selected => params[:document_filter][:document_type_id]} %>
				<% else %>
					<%= f.collection_select :document_type_id , DocumentType.alphabetically , :id,:name,{:prompt=>"All"} %>
				<% end%>
				<% if !params[:document_filter].blank? && !params[:document_filter][:document_status].blank?%>
				<%= f.collection_select :document_status , Status.for_filter , :id,:name,{:prompt=>"All",:selected => params[:document_filter][:document_status]}  %>
				<% else %>
					<%= f.collection_select :document_status , Status.for_filter , :id,:name,{:prompt=>"All"}  %>
				<% end%>
				<%= f.submit "Go",:class=>"btn btn-primary"%>
			<%end%>
			</div>
			<div class="span4"><%= page_entries_info @documents,:entry_name => 'item' %></div>
			</div>
