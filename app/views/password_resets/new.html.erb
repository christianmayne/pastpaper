<div class="general_page">
	<div class="introduction"><span class="headline4 lead">Change Your Password</span></div>
	<div class="general_page_text">
		Please enter your email address you used to register on the site.  We will send you an email that will enable you to change your password and gain access to the site.	
	</div>
	<br />
	<div class="password_form_container">
		<%= form_tag password_resets_path, :method => :post, :class=>"well form-inline" do %>
      <%= label_tag :email, "Email", :class=>"control-label"%>&nbsp;&nbsp;&nbsp;&nbsp;
      <%= text_field_tag :email,"" , {:placeholder => "Input Your Email " , :class => "input-xlarge" }%>&nbsp;&nbsp;&nbsp;&nbsp;
		  <%= submit_tag "Reset password", :class => "btn" %>
		<% end %>
	</div>
</div>
