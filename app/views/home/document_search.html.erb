<% @pagetitle = "Find a Publication" %>
<div id="simple-search-box" class="span-24 last">
   <%= render :partial => "shared/search_box" %>
</div>

<div id="search-form" class="span-24 last">

    <div id="search-box" class="span-18 search-form">
 
        <div class="box-margins">        
            <span class="alt">Publication Search</span>
            <span class="text-info-small red">The results of this page should show the title, not the name of the document</span>
            <div>
                
                <% form_for :search_document, :url => search_results_home_path do |f| %>
                    <div class="span-18">
                        <span class="span-6"> Document Type <%= f.collection_select :document_type_id, @document_type, :id, :name, :prompt => true %></span>
                        <span class="span-6"> Title <%= f.text_field :document_title, :size => 20 %></span>
                    </div>

                    <div class="span-18">
                        <span class="span-6">Author <%= f.text_field :document_author, :size => 20 %></span>
                    </div>

                    <div class="span-18">
                        <span class="span-6">Publisher <%= f.text_field :document_publisher, :size => 20 %></span>
                    </div>

                    <div class="span-18 date-selector">
                        <span class="span-4">
                            From Date
                            <%= f.text_field :date_from, :value => "yyyy", :only_integer => true,
                                :onfocus => '(this.value == "yyyy") ? this.value = "" : this.value',
                                :onblur => '(this.value == "") ? this.value = "yyyy" : this.value',
                                :class => 'date-4'
                            %>
                        </span>

                        <span class="span-4">
                            To Date
                            <%= f.text_field :date_to, :value => "yyyy",
                                :onfocus => '(this.value == "yy") ? this.value = "" : this.value',
                                :onblur => '(this.value == "") ? this.value = "yy" : this.value',
                                :class => 'date-4'
                            %>
                        </span>
                    </div>  

                    <div class="span-18">
                        <b>Or</b>
                    </div>

                    <div class="span-18 date-selector">
                        <span class="span-4">
                            <%= f.text_field :date_other_from, :value => "yyy",
                                :onfocus => '(this.value == "yyy") ? this.value = "" : this.value',
                                :onblur => '(this.value == "") ? this.value = "yyy" : this.value',
                                :class => "date-4"
                            %> Years ago +/-
                            <%= f.text_field :date_other_to, :value => "yy",
                                :onfocus => '(this.value == "yy") ? this.value = "" : this.value',
                                :onblur => '(this.value == "") ? this.value = "yy" : this.value',
                                :class => "date-2"
                            %> years
                        </span>
                    </div>

                    <p style="text-align: center;"><%= f.submit "Search" %></p>
                <% end %>
            </div>
        </div>

        <hr />
        <div class="box-margins">
            <span class="alt">Recent Searches</span>
        </div>

    </div>

    <div id="sidebar-right" class="span-6 sidebar-right last">
        <span class="alt">Right Sidebar</span>
    </div>   

</div>
