<% newspaper_ad = '' %>


<% @pagetitle = "Search Results" %>

<div class="alert alert-info">
  <div class="lead newfont">
    <%= page_entries_info @documents %>
    <% if session[:search_params][:search_type].to_i == 1 %>
      with people matching your search criteria
    <%elsif session[:search_params][:search_type].to_i == 2 %>
      with locations matching your search criteria
    <%elsif session[:search_params][:search_type].to_i == 3 %>
      publications matching your search criteria	
    <%else%>
      Items matching your search criteria
    <%end%>
  </div>
</div>

<div class="search_results_container">
  <div class="row-fluid">
    <div class="pull-left">
	    <%= link_to "Back" ,root_path,:class=>"btn"%>
    </div>


    <% if session[:search_params][:document_type_id].to_i == 4 %>
      <div class="row-fluid" style="margin-bottom:10px;">
        <div class="pull-right">
          <script language="javascript" type="text/javascript">
            var myTarget="http://track.webgains.com/click.html?wglinkid=85629&wgcampaignid=122233&js=0";
            var uri = "http://track.webgains.com/link.html?wglinkid=85629&wgcampaignid=122233";
            document.write('<a href="'+myTarget+'" target="_blank" onMouseOver="window.status=\'http://www.historic-newspapers.co.uk\';return true;" onMouseOut="window.status=\'\'"><img src="'+uri+'" width="728" height="90" border="0" alt="Historic Newspapers"/></a>');
          </script>
        </div>
      </div>
    <%end%>



    <% if site.preview_mode = false %>
      <% if @documents.count > 1 %>
        <div class="pull-right">
          <%= form_for :document_filter, :url => search_results_home_index_path, :html => {:class=>"form-inline"} do |f| %>
            You can filter your search : 
            <%= f.collection_select :document_type_id , DocumentType.paper.alphabetically , :id,:name,{:prompt=>"Select document type"} %>
            <%= f.collection_select :document_status , Status.for_filter , :id,:name,{:prompt=>"Select document status"}  %>
            <%= f.submit "Go",:class=>"btn btn-primary"%>
          <%end%>
        </div>
      <%end%>
    <% end %>
  </div>
  <div id="document_results">
    <%= render :partial => "search_result"%>
  </div>
</div>
