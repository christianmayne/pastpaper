<div class="publication hero-unit">
	<span class="lead">Search for a publication</span>
	<div class="info-text">
		Search for a newspapers, directory, bible or other item by date, title or publisher
	</div>
	<!-- Search by Publication -->
	<%publicationsearch = capture do %>
		<div id="publication" class="">
			<%= form_for :search_publication, :url => search_results_home_index_path, :html => {:class=>"form-inline"} do |f| %>
				<%= f.hidden_field :search_type, :value=>3 %>
				<!-- Search place -->
				<%= f.collection_select :document_type_id, DocumentType.alphabetically, :id, :name, :prompt => "Please select type", :class => 'text  input-medium' %>
				<%= f.text_field :document_title,{:placeholder => "Title",:size=>15, :class=>"search_input_place input-medium"} %>
				<%= f.text_field :document_publisher,{:placeholder => "Publisher",:size=>15, :class=>"search_input_place  input-medium"} %>
				<%= f.text_field :document_author,{:placeholder => "Author",:size=>20, :class=>"search_input_place  input-medium"} %>
				<!-- Search Dates -->
				<%#= f.number_field :date_from, {:placeholder=>"YYYY", :size => 10, :class=>"search_input_date  input-medium"} %>
				<%#= f.number_field :date_to, {:placeholder=>"YYYY",:size => 10, :class => "search_input_date  input-medium"} %>
			<%= f.submit "",:class=>"btn btn-primary",:id=>"searchbyplacebtn", :value=>"Search" %>
			<%end%>
		</div>
	<%end%>	
	<%= publicationsearch %>
</div> <!-- End Search Form (Place)-->
