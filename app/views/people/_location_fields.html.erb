<%= link_to_remove_fields "<span class='button'>Use Existing Location</span>".html_safe, f, :restore_replaced %>
<div class="fields">
	<div class="controls controls-row">
		<%= f.text_field  :street1, :placeholder=>'Address 1', :class=>"span6" %>
	</div>
	<div class="controls controls-row">
		<%= f.text_field  :street2, :placeholder=>'Address 2', :class=>"span6" %>
	</div>
	<div class="controls controls-row">
		<%= f.text_field  :town, :placeholder=>'Town / City', :class=>'span6' %>
	</div>
	<div class="controls controls-row">
		<%= f.text_field  :county, :placeholder=>'County', :class=>'span6' %>
	</div>
	<div class="controls controls-row">
		<%= f.text_field  :state, :placeholder=>'State', :class=>'span6'%>
	</div>
	<div class="controls controls-row">
		<%= f.text_field  :country, :placeholder=>'Country', :class=>'span6' %>
	</div>
</div>

